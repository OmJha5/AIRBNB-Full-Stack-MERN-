<% layout("/layouts/boilerplate") %>

<body>

    <form action="/listings/<%= listing._id %>?_method=PATCH" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
        <h1>Edit Your Listing</h1>

        <div class="title">
            <label for="title" class="form-label">Title</label> <br>
            <input name="Listing[title]" id="title" type="text" placeholder="Enter Title" value="<%= listing.title %>" class="form-control" required> 
        </div>

        <div class="description">
            <label for="desc" class="form-label">Description</label> <br>
            <textarea name="Listing[description]" placeholder="Enter Description" id="desc" rows="3" class="form-control" required> <%= listing.description %></textarea>
        </div>

        <div class="image">
            <label for="image" class="form-label">Upload New Image</label> <br>
            <input type="file" name="Listing[image]"  id="image" class="form-control" required>
        </div>

        <div class="priceAndCountry">
            <span class="price">
                <label for="price" class="form-label">Price</label>
                <input name="Listing[price]" type="text" placeholder="Enter Price" id="price"  value="<%= listing.price %>" class="form-control" required> 
            </span>

            <span class="country">
                <label for="country" class="form-label">Country</label>
                <input name="Listing[country]" type="text" placeholder="Enter Country" id="country" value="<%= listing.country %>" class="form-control" required> <br>
            </span>
        </div>

        <div class="location">
            <label for="location" class="form-label">Location</label> <br>
            <input name="Listing[location]" type="text" placeholder="Enter Location" id="location" value="<%= listing.location %>" class="form-control" required>
        </div>

        <div class="category mb-3 mt-3">
            <label for="category" class="mb-2">Category</label>
            <select id = "category" class="form-control form-select" name="Listing[category]" id="">
                <option value="trending">Trending</option>
                <option value="rooms">Rooms</option>
                <option value="iconiccity">Iconic City</option>
                <option value="castles">Castles</option>
                <option value="amazingpools">Amazing Pools</option>
                <option value="camping">Camping</option>
                <option value="beech">Beech</option>
                <option value="arctic">Arctic</option>
                <option value="beachfront">Beach Front</option>
                <option value="domes">Domes</option>
            </select>
        </div>

        <button id="btn">Edit</button>
    </form>

</body>
