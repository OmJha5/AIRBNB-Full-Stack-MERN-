<% layout("/layouts/boilerplate") %>
<body>
    <h1><%= success %></h1>
    <h1>Here is your listings.. </h1>

    <div class="cards">

        <% for(let listings of allListings){ %>
            <a href="/listings/<%= listings._id %>">
                <div class="card">
                    <div class="card-image">
                        <img src="<%= listings.image %>" alt="">
                    </div>
                    <div class="card-details">
                        <div class="card-title"><b><%= listings.title %></b></div>
                        <div class="card-price">&#8377; <%= listings.price.toLocaleString("en-IN") %> / Night</div>
                    </div>
                </div>
            </a>
        <% } %>

    </div>

</body>